<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@color/colorBackgroundListView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pic_imageView_card"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:padding="4dp"
                android:src="@drawable/in_progress_icon"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

            <TextView
                android:id="@+id/title_textView_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/colorTextLight"
                android:layout_toEndOf="@id/pic_imageView_card"
                />

            <TextView
                android:id="@+id/sets_textView_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@id/title_textView_card"
                android:layout_toEndOf="@id/pic_imageView_card"
                android:textColor="@color/colorTextLight"
                android:paddingLeft="4dp"
                />

            <TextView
                android:id="@+id/reps_textView_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toEndOf="@id/pic_imageView_card"
                android:layout_below="@id/sets_textView_card"
                android:textColor="@color/colorTextLight"
                android:paddingLeft="4dp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>